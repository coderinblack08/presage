datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String    @id @default(cuid())
  email          String?
  username       String    @unique
  profilePicture String?
  displayName    String
  bio            String?
  googleId       String?
  tokenVersion   Int       @default(1)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  Presage        Presage[]
  Like           Like[]
}

enum Type {
  audio
  text
}

model Presage {
  id          String   @id @default(cuid())
  type        Type
  title       String?  @db.VarChar(100)
  content     String?  @db.VarChar(500)
  description String?  @db.VarChar(500)
  audio       String?
  thumbnail   String?
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
  official    Boolean  @default(false)
  publisher   String?
  duration    Int?
  likes       Int      @default(0)
  Like        Like[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Like {
  presage   Presage @relation(fields: [presageId], references: [id])
  presageId String
  user      User    @relation(fields: [userId], references: [id])
  userId    String

  @@id([presageId, userId])
}
