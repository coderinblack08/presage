generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  profilePicture String?
  displayName    String   @db.VarChar(64)
  username       String   @unique @db.VarChar(64)
  bio            String?
  googleId       String
  createdAt      DateTime @default(now())
}
